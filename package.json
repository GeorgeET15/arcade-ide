{
  "name": "arcade-ide",
  "version": "1.0.0",
  "type": "commonjs",
  "description": "Retro-themed 2D game development IDE using arcade.h",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "make": "electron-builder",
    "make:win": "electron-builder --win",
    "make:linux": "electron-builder --linux"
  },
  "author": {
    "name": "GeorgeET15",
    "email": "georgeet15@example.com"
  },
  "license": "ISC",
  "devDependencies": {
    "electron": "^33.0.2",
    "electron-builder": "^25.1.8"
  },
  "dependencies": {
    "monaco-editor": "^0.52.2"
  },
  "build": {
    "appId": "com.georgeet15.arcadeide",
    "productName": "Arcade IDE",
    "asar": false,
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "style.css",
      "renderer.js",
      "icon.png",
      "lib/arcade.c",
      "lib/arcade.h",
      "lib/stb_image.h",
      "lib/stb_image_write.h",
      "lib/stb_image_resize2.h",
      "music/**/*",
      "themes/**/*",
      "completions/**/*",
      "node_modules/monaco-editor/min/**/*",
      "node_modules/@fortawesome/fontawesome-free/**/*"
    ],
    "directories": {
      "output": "dist"
    },
    "linux": {
      "target": [
        "deb"
      ],
      "executableName": "arcade-ide",
      "icon": "icon.png",
      "category": "Development",
      "desktop": {
        "Name": "Arcade IDE",
        "Comment": "Retro-themed 2D game development IDE",
        "Icon": "arcade-ide",
        "Type": "Application",
        "Categories": "Development;IDE;"
      }
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "icon.ico",
      "executableName": "ArcadeIDE"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "icon.ico",
      "uninstallerIcon": "icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Arcade IDE"
    }
  }
}
